@model IEnumerable<DTO.DtoEntity.CustomerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ReviewLayout.cshtml";
}

<section class="review" id="review">
    <h1 class="heading">Müştəri <span>rəyləri</span></h1>
    <div class="box-container">

        @foreach (var item in Model)
        {
            <div class="box">
                <img src="~/website/images/quote.png" alt="quote" />
                <p>
                    @item.Text
                </p>
                <img src="@item.Image" alt="avatar" class="user" />
                <h3>@item.FirstName</h3>
                <div class="stars">
                    @for (int i = 0; i < Convert.ToInt32(item.Rate); i++)
                    {
                        <i class="fa-solid fa-star"></i>
                    }
                    @for (int i = 0; i < 5 - Convert.ToInt32(item.Rate); i++)
                    {
                        <i class="fa-regular fa-star"></i>
                    }



                </div>
            </div>
        }
    </div>
</section>
