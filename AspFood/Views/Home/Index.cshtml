@model IEnumerable<DTO.DtoEntity.MenuDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section class="menu" id="menu">
    <h1 class="heading">Standart <span>menyular</span></h1>
    <div class="box-container">
        @foreach(var item in ViewBag.c)
        {
            <div class="box">
                <div class="box-head">
                    <img src="@item.Image" alt="menu" />
                    <span class="menu-category">@item.CategoryName</span>
                    <h3>@item.Title</h3>
                    <div class="price">@item.DisCount Azn <span>@item.Price Azn</span></div>
                </div>
                <div class="box-bottom">
                    <a href="#" class="btn">sifarış ver</a>
                </div>
            </div>
        }
    </div>
</section>
<!-- Menu Section End -->
<!-- Products Section Start -->
<section class="products" id="products">
    <h1 class="heading">Özəl <span>menyular</span></h1>
    <div class="box-container">
        @foreach (var item in Model)
        {
            <div class="box">
                <div class="box-head">
                    <span class="title">@item.CategoryName</span>
                    <a href="#" class="name">@item.Title</a>
                </div>
                <div class="image">
                    <img src="@item.Image" alt="products" />
                </div>
                <div class="box-bottom">
                    <div class="info">
                        <b class="price">@item.Price Azn</b>
                        <span class="amount">@item.Gram gr / @item.Calory Calory</span>
                    </div>
                    <div class="product-btn">
                        <a href="#">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

