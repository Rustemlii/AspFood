@model IEnumerable<DTO.DtoEntity.MenuDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

<section class="products" id="products">
    <h1 class="heading">Özəl <span>menyular</span></h1>
    <div class="box-container">
        @foreach(var item in Model)
        {
            <div class="box">
                <div class="box-head">
                    <span class="title">@item.CategoryName</span>
                    <a href="#" class="name">@item.Title</a>
                </div>
                <div class="image">
                    <img src="@item.Image" alt="products" />
                </div>
                <div class="box-bottom">
                    <div class="info">
                        <b class="price">@item.Price azn</b>
                        <span class="amount">@item.Gram gr / @item.Calory Cal</span>
                    </div>
                    <div class="product-btn">
                        <a href="#">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        }

    </div>
</section>

